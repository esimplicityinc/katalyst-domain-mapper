{
  "$schema": "https://opencode.ai/config.json",
  "agent": {
    "foe-scanner-container": {
      "description": "Container-optimized FOE Scanner that runs in batch mode",
      "mode": "primary",
      "prompt": "{file:./.opencode/agents/foe-scanner-container.md}",
      "temperature": 0.3,
      "tools": {
        "bash": true,
        "glob": true,
        "grep": true,
        "read": true,
        "write": false,
        "edit": false,
        "task": true
      },
      "permission": {
        "bash": {
          "*": "allow"
        },
        "task": {
          "foe-scanner-*": "allow"
        }
      }
    },
    "foe-scanner-ci": {
      "description": "Analyzes CI/CD pipelines for Feedback dimension",
      "mode": "subagent",
      "prompt": "{file:./.opencode/agents/foe-scanner-ci.md}",
      "temperature": 0.3,
      "tools": {
        "bash": true,
        "glob": true,
        "grep": true,
        "read": true
      },
      "permission": {
        "bash": { "*": "allow" }
      }
    },
    "foe-scanner-tests": {
      "description": "Analyzes test suites for Feedback and Confidence dimensions",
      "mode": "subagent",
      "prompt": "{file:./.opencode/agents/foe-scanner-tests.md}",
      "temperature": 0.3,
      "tools": {
        "bash": true,
        "glob": true,
        "grep": true,
        "read": true
      },
      "permission": {
        "bash": { "*": "allow" }
      }
    },
    "foe-scanner-arch": {
      "description": "Analyzes architecture patterns for Understanding dimension",
      "mode": "subagent",
      "prompt": "{file:./.opencode/agents/foe-scanner-arch.md}",
      "temperature": 0.3,
      "tools": {
        "bash": true,
        "glob": true,
        "grep": true,
        "read": true
      },
      "permission": {
        "bash": { "*": "allow" }
      }
    },
    "foe-scanner-domain": {
      "description": "Analyzes DDD patterns for Understanding dimension",
      "mode": "subagent",
      "prompt": "{file:./.opencode/agents/foe-scanner-domain.md}",
      "temperature": 0.3,
      "tools": {
        "bash": true,
        "glob": true,
        "grep": true,
        "read": true
      },
      "permission": {
        "bash": { "*": "allow" }
      }
    },
    "foe-scanner-docs": {
      "description": "Analyzes documentation quality for Understanding dimension",
      "mode": "subagent",
      "prompt": "{file:./.opencode/agents/foe-scanner-docs.md}",
      "temperature": 0.3,
      "tools": {
        "bash": true,
        "glob": true,
        "grep": true,
        "read": true
      },
      "permission": {
        "bash": { "*": "allow" }
      }
    }
  },
  "tools": {
    "bash": true,
    "glob": true,
    "grep": true,
    "read": true,
    "write": false,
    "edit": false,
    "task": true
  },
  "permission": {
    "bash": {
      "*": "allow"
    },
    "task": {
      "*": "allow"
    },
    "read": {
      "*": "allow"
    },
    "external_directory": {
      "/repo/**": "allow",
      "/repo": "allow"
    }
  }
}
