{
  "name": "@foe/schemas",
  "version": "0.1.0",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./scan": {
      "types": "./dist/scan/index.d.ts",
      "default": "./dist/index.js"
    },
    "./field-guide": {
      "types": "./dist/field-guide/index.d.ts",
      "default": "./dist/index.js"
    },
    "./graph": {
      "types": "./dist/graph/index.d.ts",
      "default": "./dist/index.js"
    },
    "./ddd": {
      "types": "./dist/ddd/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "bun build ./src/index.ts --outdir ./dist --target node --format esm && bun run build:types",
    "build:types": "tsc --emitDeclarationOnly --declaration --outDir dist",
    "dev": "bun --watch src/index.ts",
    "test": "bun test"
  },
  "dependencies": {
    "zod": "^3.24.1"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.3"
  }
}
